@page "/products/all"
@model WiredBrainCoffeeAdmin.Pages.Products.ViewAllProductsModel
@{
}
<h1>All Products</h1>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Image</td>
            <td>Name</td>
            <td>Category</td>
            <td>Price</td>
            <td>ShorDescription</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="~/images/menu/@item.ImageFileName" /></td>
                <td>@item.Name<td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.ShortDescription</td>
                <td><a asp-page="EditProduct" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>